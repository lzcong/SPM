page{
  background-image: linear-gradient(109.6deg, rgb(223, 234, 247) 11.2%, rgb(244, 248, 252) 91.1%);
}


.index_user{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 750rpx;
  height: 40vh;
}

.index_user view open-data{
  display: block;
  overflow: hidden;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom:25rpx;
  box-shadow: 0 0 5rpx 5rpx #ccc;
}

.index_button{
  height: 35vh;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.index_button button{
  background-color: #027AFF;
  font-size: 24rpx;
  color:white;
  margin: 40rpx;
}
